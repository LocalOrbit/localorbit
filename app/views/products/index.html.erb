<div class="row">
  <div class="column column--fourth">

    <%= render "selected_delivery" %>

    <div class="header header--column">
      <h2 class="heading heading--sidebar">Filter the Shop</h2>
      <% if request.query_parameters.present? %>
        <%= link_to "Reset", products_path, class: "btn reset" %>
      <% end %>
    </div>

    <div id="product-filter">
      <a href="#product-filter-organization" class="filter-toggle caretted caretted--right">Seller</a>
      <%= filter_list(@filter_organizations, :organization) %>

      <a href="#product-filter-category" class="filter-toggle caretted caretted--right">Category</a>
      <%= filter_list(@filter_categories, :category) %>
    </div>
  </div
  ><div class="column column--three-fourths">
    <div class="products--user">
      <h2 class="table-heading">Products Available on <%= current_delivery.display_date %></h2>
      <p class="table-summary">
        Please complete your order by <%= current_delivery.cutoff_time.strftime("%B %-d at %l%p") %>.<br>
        Pick up is <%= current_delivery.display_date %> <%= current_delivery.time_range %>.
      </p>

      <% @categories.each do |category| %>
        <% if @product_groups[category].present? %>
          <%= render "table", products: @product_groups[category], category: category %>
        <% end %>
      <% end %>

      <%= link_to "Review Cart", cart_path, id: "review_cart", class: "btn btn--blue btn--small pull-right add-toggle" %>
    </div>
  </div>
</div>
