<div class="row">
  <div class="column column--fourth" id="product-filter">
    <h2 class="heading--sidebar">Pick Up Date</h2>
    <% #FIXME This belongs elsewhere. %>
    <% current_delivery = Delivery.find(session[:current_delivery_id]) %> 
    <% schedule = current_delivery.delivery_schedule %>

    <div class="sidebar-box">
      <h3 class="subheading--sidebar">When</h3>
      <p>
        <strong><%= current_delivery.deliver_on.strftime("%B %-d") %></strong><br>
        from <%= schedule.buyer_pickup_start %> – <%= schedule.buyer_pickup_end %>
      </p>

      <h3 class="subheading--sidebar">Where</h3>
      <%= schedule.buyer_pickup_location %>
    </div>



    <div class="header header--column">
      <h2 class="heading heading--sidebar">Filter the Shop</h2>
      <% if request.query_parameters.present? %>
        <%= link_to "Reset", products_path, class: "btn reset" %>
      <% end %>
    </div>


    <a href="#product-filter-organization" class="filter-toggle caretted caretted--right">Seller</a>
    <%= filter_list(current_market.organizations, :organization) %>

    <a href="#product-filter-category" class="filter-toggle caretted caretted--right">Category</a>
    <%= filter_list(@categories, :category) %>
  </div
  ><div class="column column--three-fourths">
    <div class="products--user">
      <h2>Products Available on <%= current_delivery.deliver_on.strftime("%B %-d") %></h2>
      <p>
        Complete your order by <%= current_delivery.cutoff_time.strftime("%B %-d at %l%p") %>.
        Pick up begins <%= current_delivery.deliver_on.strftime("%B %-d") %> at <%= schedule.buyer_pickup_start %> and ends at <%= schedule.buyer_pickup_end %>. 
      </p>
      <%= render "table", products: @products %>
    </div>
  </div>
</div>
