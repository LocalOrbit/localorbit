<!doctype html>
<html lang="en-us">
<head>
  <meta charset="utf-8">
  <title>Label</title>
  <link href="https//fonts.googleapis.com/css?family=Open+Sans:400,700,300" rel="stylesheet" type="text/css">
  <style>
    body {
      color: #000;
      font-size: 0.1px;
    }
    h1, h2 {
      margin: 0;
    }
    hr {
      position: relative;
      height: 0;
      padding: 0 0 1px;
      border: 0;
      margin: 1em 10%;
      color: #ccc;
      background: #ccc;
    }

    .l-flex {
      display: -webkit-flex;
      display: flex;
      -webkit-flex-direction: column;
      flex-direction: column;
      -webkit-justify-content: center;
      justify-content: center;
    }
    .page {
      overflow: hidden;
      outline: solid 1px #fff;
      page-break-after: always;
    }
    .label-wrap {
      position: relative;
      outline: solid 1px #eee;
      margin: 0 auto;
      background: #fff;
      text-align: center;
    }
    .fourbyfour {
      width: 4in;
      height: 4in;
    }
    .two-up {
      width: 7.5in;
      height: 4.5in;
    }
      .two-up .product-name {
        font-size: .6in;
      }
    .two-by-two {
      float: left;
      width: 3.75in;
      height: 4.5in;
    }
    .two-by-two .product-name {
      margin-bottom: .2em;
      font-size: .4in;
    }

    .product-name {
      margin: 0 5% .1em;
      font: bold .5in/1.2 'Open Sans', sans-serif;
    }

    .seller-name {
      font: normal .4in 'Open Sans', sans-serif;
    }
    @media screen {
      body {
        background: #ccc;
      }
      .page {
        width: 7.5in;
        height: 9in;
        padding: 1in .5in;
        margin: 1in auto;
        background: #f1f1f1;
      }
    }
  </style>
</head>
<body>

  <div class="page">
    <div class="l-flex label-wrap fourbyfour">
      <h1 class="product-name">Product Name</h1>
      <hr>
      <h2 class="seller-name">Seller Name</h2>
    </div>
  </div>
  <div class="page">
    <div class="l-flex label-wrap two-up">
      <h1 class="product-name">Product Name</h1>
      <hr>
      <h2 class="seller-name">Seller Name</h2>
    </div>    
    <div class="l-flex label-wrap two-up">
      <h1 class="product-name">Product Name</h1>
      <hr>
      <h2 class="seller-name">Seller Name</h2>
    </div>
  </div>
  <div class="page">
    <div class="l-flex label-wrap two-by-two">
      <h1 class="product-name">Product Name</h1>
      <hr>
      <h2 class="seller-name">Seller Name</h2>
    </div>
    <div class="l-flex label-wrap two-by-two">
      <h1 class="product-name">Product Name</h1>
      <hr>
      <h2 class="seller-name">Seller Name</h2>
    </div>
    <div class="l-flex label-wrap two-by-two">
      <h1 class="product-name">Longer Product Name</h1>
      <hr>
      <h2 class="seller-name">Seller Name</h2>
    </div>
    <div class="l-flex label-wrap two-by-two">
      <h1 class="product-name">Product Name</h1>
      <hr>
      <h2 class="seller-name">Seller Name</h2>
    </div>
  </div>
</body>
</html>

