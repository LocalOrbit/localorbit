  <%= render 'admin/markets/header' %>

<div class="row row--partial">
  <div class="column column--three-fourths">
    <div class="l-page-header">
      <%= form_for admin_market_managers_path(@market), html: { class: "form-actions" } do |f|%>
        <%= email_field_tag :email, nil, placeholder: "Email address" %>
        <button type="submit" class="btn--add btn--small">Add Market Manager</button>
      <% end %>
        
    </div>
    <table class="market-managers">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th></th>
        </tr>
      </thead>
      <% @market.managers.each do |user| %>
      <tr id="<%= dom_id(user) %>">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td class="delete">
          <%= form_tag admin_market_manager_path(@market, user.id), {method: :delete} do %>
            <button class="delete" type="submit"><i class="font-icon icon-delete"></i> Remove Manager</button>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
