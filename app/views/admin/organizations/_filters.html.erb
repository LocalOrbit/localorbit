<div class="clear-after invoice_search">
  <div class="pull-left">
    <span class="preserve-alighment">
      <input type="search" id="search" value="<%= @query_params["search"] %>" placeholder="Organization Name"><button type="submit" id="search-btn" class="btn btn--end">Search</button>
    </span>
  </div>

  <div class="manager-filters">

  <% if current_user.admin? || current_user.multi_market_membership? %>
    <span class="preserve-alignment">
      <label for="filter_maket">Market</label><br>
      <%= select_tag :filter_market, options_for_select(@selling_markets, selected: @query_params["market"]), class: 'filter-dropdown', data: { parameter: "market"} %>
    </span>
    <% end %>

    <span class="preserve-alignment">
      <label for="filter_can_sell">Selling Status</label><br>
      <%= select_tag :filter_can_sell, options_for_select(seller_status_options, selected: @query_params["can_sell"]), class: 'filter-dropdown', data: { parameter: "can_sell"} %>
    </span>
    <%= link_to "Reset", admin_organizations_path(clear: '', sort: @query_params["sort"]), class: 'btn reset' if can_reset?(@query_params) %>

  </div>
</div>
