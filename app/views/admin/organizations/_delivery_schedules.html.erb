<% delivery_schedules.each do |market, schedules| %>
<div class="delivery-schedule-options">
  <b><%= market.name %></b>
  <ul>
    <% schedules.decorate.each do |schedule| %>
      <li class="product-delivery-schedule">
        <label>
          <%= check_box_tag "product[delivery_schedule_ids][]", schedule.id, schedule.attached_to_product(product), disabled: product.nil? || product.use_all_deliveries? %>
          <span class="weekday"><%= schedule.weekday.pluralize %></span> <%= schedule.human_description %>
        </label>
      </li>
    <% end %>
  </ul>
</div>
<% end %>
