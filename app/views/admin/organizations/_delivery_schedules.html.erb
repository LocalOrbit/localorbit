<% delivery_schedules.each do |market, schedules| %>
<div class="delivery-schedule-options">

  <h3 class="heading-conditionals"><%= market.name %></h3>
  <ul class="list-naked">
    <% schedules.decorate.each do |schedule| %>
      <li class="product-delivery-schedule conditional"> 
        <%= check_box_tag "product[delivery_schedule_ids][]", schedule.id, selected_ids.include?(schedule.id.to_s), id: "product_schedule_ids_#{schedule.id}", disabled: product.nil? || product.use_all_deliveries? %>
        <label for="product_schedule_ids_<%= schedule.id %>">
          <span class="weekday"><%= schedule.weekday.pluralize %></span> <%= schedule.human_description %>
        </label>
      </li>
    <% end %>
  </ul>
</div>
<% end %>
