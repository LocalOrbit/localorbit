<div class="field">
  <%= f.label :cycle %><br>
  <span>Weekly</span>
</div>

<div class="field">
  <%= f.label :day %><br>
  <%= f.select :day, weekday_options %>
</div>

<div class="field">
  <%= f.label :fee %><br>
  <%= f.number_field :fee, min: 0, step: "0.01", size: 6 %>
</div>

<div class="field">
  <%= f.label :fee_type %><br>
  <%= f.select :fee_type, ['Percentage', 'Dollar Amount'] %>
</div>

<div class="field">
  <%= f.label :order_cutoff %><br>
  <%= f.number_field :order_cutoff, min: 6, max: 504, size: 3 %> hours before delivery
</div>

<div class="field conditional">
  <%= f.check_box :require_delivery %>
  <%= f.label :require_delivery, 'All products from sellers on this market will deliver on this cycle.' %>
</div>

<div class="field conditional">
  <%= f.check_box :require_cross_sell_delivery %>
  <%= f.label :require_cross_sell_delivery, 'All cross-sell products from sellers on this market will deliver on this cycle.' %>
</div>

<h2>Seller drop off or delivery info</h2>

<div class="field">
  <%= f.label :seller_fulfillment_location_id %><br>
  <%= f.select :seller_fulfillment_location_id, @market.fulfillment_locations('Direct to customer') %>
</div>

<div class="field conditional<%= ' is-hidden' unless f.object.seller_fulfillment_location %>" id="market_pickup_option">
  <%= f.check_box :market_pickup %>
  <%= f.label :market_pickup, 'Market will pickup from seller location.' %>
</div>

<div class="field">
  <%= f.label :seller_delivery_start %><br>
  <%= f.select :seller_delivery_start, quarter_hour_select_options %>
</div>

<div class="field">
  <%= f.label :seller_delivery_end %><br>
  <%= f.select :seller_delivery_end, quarter_hour_select_options %>
</div>


<%= content_tag :div, id: "buyer_order_receipt", class: (f.object.seller_fulfillment_location ? '' : 'is-hidden') do %>
  <h2>Buyer order receipt</h2>

  <div class="field">
    <%= f.label :buyer_pickup_location_id %>
    <%= f.select :buyer_pickup_location_id, @market.fulfillment_locations('Delivered to Buyer from Market') %>
  </div>

  <div class="field">
    <%= f.label :buyer_pickup_start %>
    <%= f.select :buyer_pickup_start, quarter_hour_select_options %>
  </div>

  <div class="field">
    <%= f.label :buyer_pickup_end %>
    <%= f.select :buyer_pickup_end, quarter_hour_select_options %>
  </div>
<% end %>
