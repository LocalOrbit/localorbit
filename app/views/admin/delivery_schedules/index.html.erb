<%= render 'admin/markets/header' %>

<%= link_to 'Add Delivery', new_admin_market_delivery_schedule_path(@market) %>

<table>
  <thead>
    <th>Schedule</th>
    <th>Delivery</th>
    <th>Pickup</th>
  </thead>
  <tbody>
    <% @delivery_schedules.each do |delivery| %>
      <tr>
        <td class="delivery-text">
          <strong><%= link_to "#{delivery.weekday}, order cutoff #{delivery.order_cutoff} hours before delivery.", [:edit, :admin, @market, delivery] %></strong>
          <span class="address">Deliver to: <%= delivery.seller_fulfillment_address %></span>
        </td>
        <td class="delivery-time">
          <%= delivery.seller_delivery_start %> - <%= delivery.seller_delivery_end %>
        </td>
        <td class="pickup-time">
          <%= "#{delivery.buyer_pickup_start} - #{delivery.buyer_pickup_end}" if delivery.seller_fulfillment_location %>
        </td>
        <td><%= link_to 'Delete', [:admin, @market, delivery], method: :delete, data: {confirm: 'Are you sure you want to delete this delivery'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
