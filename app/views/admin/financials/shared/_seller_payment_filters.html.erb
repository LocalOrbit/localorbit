<%= search_form_for payment_history.q, url: admin_financials_payments_path, html: { class: "payment_search clear-after" } do |f| %>
  <div class="pull-left">
    <span class="preserve-alignment">
      <%= f.label :orders_order_number_cont, "Order number contains" %><br>
      <%# NOTE: Do not change the whitespace on the following line %>
      <%= f.search_field :orders_order_number_cont, placeholder: "Search Payments" -%><%= f.submit "Search", class: "btn--end" %>
    </span>
    <span class="preserve-alignment">
      <%= f.label :payment_method_eq, "Method" %><br>
      <%= f.select :payment_method_eq, Payment::PAYMENT_METHODS.map { |pm| [pm[1], pm[0]] }, { prompt: "All" }, { class: "filter-input" } %>
    </span>
  </div>

  <div class="pull-right">
    <span class="preserve-alignment">
      <label for="q_updated_at_date_gteq">Filter by Date</label><br>
      <%= datetime_field_tag "q[updated_at_date_gteq]", payment_history.start_date, class: 'datepicker' %><a href="#q_updated_at_date_gteq" class="btn btn--end calendar-toggle" title="Select a date"><i class="font-icon icon-calendar"></i></a>
    </span>
    <span class="preserve-alignment">
      <label for="q_updated_at_date_lteq" class="is-invisible">End Date</label><br>
      <%= datetime_field_tag "q[updated_at_date_lteq]", payment_history.end_date, class: 'datepicker' %><a href="#q_updated_at_date_lteq" class="btn btn--end calendar-toggle" title="Select a date"><i class="font-icon icon-calendar"></i></a>
    </span>
    <span class="preserve-alignment">
      <br>
      <%= f.submit "Filter", class: "btn--small" %>
    </span>
  </div>
<% end %>
