<%= render "admin/financials/header" %>

<h1>Review Orders</h1>

<table>
  <thead>
    <th>Order #</th>
    <th>Description</th>
    <th>Order Date</th>
    <th>Amount Owed</th>
    <th>Delivery</th>
    <th>Buyer</th>
    <th>Seller</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr class="order-row">
      <td class="order-number"><%= order.order_number %></td>
      <td class="description"></td>
      <td class="order-date"><%= order.placed_at.strftime("%m/%d/%Y") %></td>
      <td class="amount-owed"><%= number_to_currency(order.total_cost) %></td>
      <td class="delivery-status"><%= order.delivery_status %></td>
      <td class="buyer-status"><%= order.payment_status %></td>
      <td class="seller-status"></td>
    </tr>
    <% end %>
  </tbody>
</table>
