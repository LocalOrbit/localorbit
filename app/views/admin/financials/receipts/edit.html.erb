<%= render "admin/financials/header" %>

<h1>Enter Receipt for Invoice <%= @order.order_number %></h1>

<%= form_tag admin_financials_receipt_path(id: @order.id), method: :put do %>
  <%= fields_for @payment do |f| %>
    <div class="field column--half">
      <%= f.label :payment_type, "Payment Method" %><br>
      <%= f.select :payment_type, [['Cash', 'cash'], ['Check', 'check']], class: "column column--full" %>
    </div>
    <div class="field column--half">
      <%= f.label :amount %><br>
      <%= number_to_currency @order.total_cost %>
    </div>
    <div class="field column--half">
      <%= f.label :note %><br>
      <%= f.text_field :note, class: "column column--full" %>
    </div>
  <% end %>
  <input type="submit" value="Enter Receipt">
<% end %>
