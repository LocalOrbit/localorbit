<div class="money-in">
  <h2>Money In</h2>
  <table>
    <tr>
      <td class="title">
        Overdue
      </td>
      <td class="amount"><%= number_to_currency @overview.overdue %>
        <span class="tooltip" data-tooltip="Delivered, unpaid orders where the invoice due date is before today"></span>
      </td>
    </tr>
    <tr>
      <td class="title">
        Due Today
      </td>
      <td class="amount"><%= number_to_currency @overview.money_in_today %>
        <span class="tooltip" data-tooltip="Invoiced, unpaid orders due today"></span>
      </td>
    </tr>
    <tr>
      <td class="title">
        Due In Next 7 Days
      </td>
      <td class="amount"><%= number_to_currency @overview.money_in_next_seven %>
        <span class="tooltip" data-tooltip="Invoiced, unpaid orders due within the next 7 days"></span>
      </td>
    </tr>

    <% if current_user.can_manage_market?(current_market) %>
      <tr>
        <td class="title">
          Due In Next 30 Days
        </td>
        <td class="amount"><%= number_to_currency @overview.money_in_next_thirty %>
          <span class="tooltip" data-tooltip="Invoiced, unpaid orders due within the next 30 days"></span>
        </td>
      </tr>
      <tr>
        <td class="title">
          Unsent Invoices
        </td>
        <td class="amount"><%= number_to_currency @overview.money_in_purchase_orders %>
          <span class="tooltip" data-tooltip="Orders not yet invoiced"></span>
        </td>
      </tr>
    <% end %>
  </table>
  <% if current_user.can_manage_market?(current_market) %>
    <%= link_to "Send Invoices", [:admin, :financials, :invoices], class: "btn btn--primary btn--small mobile-block" %>
  <% end %>
</div>
