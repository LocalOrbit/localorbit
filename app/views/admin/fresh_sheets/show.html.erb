<div class="row row--partial">
  <div class="column column--three-fourths">
    <div class="l-page-header">
      <h1><i class="font-icon" data-icon="&#xe023;"></i>&nbsp; Fresh Sheet Preview</h1>
      <%= form_tag [:admin, :fresh_sheet], method: :put, class: "l-page-header" do %>
        <div class="field field--inline">
          <input name="email" type="email" placeholder="Email address" class="input--short" value="<%= current_user.email %>">
          <%= submit_tag 'Send Test', class: "btn btn--small btn--test" %>
        </div>
        <%= submit_tag 'Send to Everyone Now', class: "btn btn--small pull-right", data: {confirm: "Are you ready to send the Fresh Sheet?"} %>
      <% end %>
    </div>

    <iframe width="600" height="1000" src="<%= preview_admin_fresh_sheet_path %>"></iframe>
  </div>
</div>
