<%= render "admin/bank_accounts/header" %>

<div class="row row--partial">

  <div class="column column--three-fourths">
    <div class="l-page-header">
      <%= link_to "Add Bank Account", [:new, :admin, @entity, :bank_account], class: "btn btn--add btn--small pull-right" %>
    </div>
    <% if @bank_accounts.empty? %>
      <p>No Bank Accounts</p>
    <% else %>
      <table class="sortable" id="bank-accounts">
        <thead>
          <tr>
            <th>Bank Name</th>
            <th>Account Number</th>
            <th>Type</th>
            <th>Verified</th>
          </tr>
        </thead>
        <tbody>
        <% @bank_accounts.each do |bank_account| %>
          <tr class="bank-account">
            <td class="bank-name"><%= bank_account.bank_name %></td>
            <td class="account-number">******<%= bank_account.last_four %></td>
            <td class="account-type"><%= bank_account.account_type %></td>
            <td class="verified">
              <% if bank_account.verified? %>
                <i class="font-icon icon-checkmark"></i> Verified
              <% else %>
                <%= link_to "Verify", [:admin, @entity, bank_account, BankAccountVerification.new] %></td>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
