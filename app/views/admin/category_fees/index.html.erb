<%= render "admin/markets/header" %>
<%= render "admin/fees/header" %>

<legend>Category Market Fees</legend>
<div class="row row--partial">
  <%= form_for [:admin, :market, CategoryFee.new], html: { class: "column column--three-fourths",
                                           data: { markets: @markets.to_json,
                                                   type: "edit"} } do |f| %>
      <%= render "fields", {f: f} %>

      <br/><br/>
      <div class="row row--partial">
        <div class="table-wrapper">
          <div class="column column--full">
            <table>
              <thead>
              <tr>
                <th>Category</th>
                <th>Market</th>
                <th>Market Fee %</th>
                <th>Action</th>
              </tr>
              </thead>
              <tbody>
              <% @fees.each do |fee| %>
                  <tr class="category-fee-row">
                    <td class="category">
                      <%= fee.category.name %>
                    </td>
                    <td class="market">
                      <%= fee.market.name %>
                    </td>
                    <td class="fee">
                      <%= fee.fee_pct %>
                    </td>
                    <td class="action">
                      <%= link_to raw('<i class="fa fa-trash-o">&nbsp;</i>'), admin_market_category_fee_path(@market, fee), method: :delete, data: { confirm: "Are you sure you want to delete this fee?" }, title: "Delete", class: "font-icon" %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
  <% end %>
</div>