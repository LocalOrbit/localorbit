<%= search_form_for presenter.q, url: admin_report_path(presenter.report.to_s.dasherize), html: { class: "payment_search clear-after" } do |f| %>
  <div class="reports-filters">
    <div class="pull-left" data-filter-count="<%= presenter.filters.count - 2 %>">
      <% presenter.filters.each do |filter| %>

        <% if filter == :order_number %>
          <div>
            <%= f.label :order_order_number_or_order_payment_note_cont, "Search" %><br>
            <div class="search-widget">
              <%= f.search_field :order_order_number_or_order_payment_note_cont, placeholder: "Order #", class: append_sticky_class(:order_order_number_or_order_payment_note_cont) -%><%= f.submit "Search", class: "btn--end" %>
            </div>
          </div>
          <br>
        <% end %>

        <% if filter == :market_name && current_user.multi_market_membership? %>
          <span class="preserve-alignment mobile-block">
            <%= f.label :order_market_id_in, "Market" %><br>
            <%= f.select :order_market_id_in, options_from_collection_for_select(presenter.markets, :id, :name, presenter.q.order_market_id_in), { include_blank: nil }, { multiple: true, class: [append_sticky_class(:order_market_id_in, "filter-input"),'multiselect'] } %>
          </span>
        <% end %>

        <% if filter == :seller_name %>
          <span class="preserve-alignment mobile-block">
            <%= f.label :product_organization_id_in, "Supplier" %><br>
            <%= f.select :product_organization_id_in, options_from_collection_for_select(presenter.sellers, :id, :name, presenter.q.product_organization_id_in), { include_blank: nil }, { multiple: true, class: [append_sticky_class(:product_organization_id_in, "filter-input"),'multiselect'] } %>
          </span>
        <% end %>

        <% if filter == :buyer_name %>
          <span class="preserve-alignment mobile-block">
            <%= f.label :order_organization_id_in, "Buyer" %><br>
            <%= f.select :order_organization_id_in, options_from_collection_for_select(presenter.buyers, :id, :name, presenter.q.order_organization_id_in), { include_blank: nil }, { multiple: true, class: [append_sticky_class(:order_organization_id_in, "filter-input"),'multiselect'] } %>
          </span>
        <% end %>

        <% if filter == :fulfillment_day %>
          <span class="preserve-alignment mobile-block">
            <%= f.label :order_delivery_delivery_schedule_buyer_day_in, "Fulfillment Day" %><br>
            <%= f.select :order_delivery_delivery_schedule_buyer_day_in, options_from_collection_for_select(presenter.fulfillment_days, :first, :last, presenter.q.order_delivery_delivery_schedule_day_in), { include_blank: nil }, { multiple: true, class: [append_sticky_class(:order_delivery_delivery_schedule_buyer_day_in, "filter-input"),'multiselect'] } %>
          </span>
        <% end %>

        <% if filter == :fulfillment_type %>
          <span class="preserve-alignment mobile-block">
            <%= f.label :order_delivery_delivery_schedule_fulfillment_type_in, "Fulfillment Type" %><br>
            <%= f.select :order_delivery_delivery_schedule_fulfillment_type_in, options_from_collection_for_select(presenter.fulfillment_types, :first, :last, presenter.q.order_delivery_delivery_schedule_fulfillment_type_in), { include_blank: nil }, { multiple: true, class: [append_sticky_class(:order_delivery_delivery_schedule_fulfillment_type_in, "filter-input"),'multiselect'] } %>
          </span>
        <% end %>

        <% if filter == :category_name %>
          <span class="preserve-alignment mobile-block">
            <%= f.label :product_category_id_in, "Category" %><br>
            <%= f.select :product_category_id_in, options_from_collection_for_select(presenter.categories, :id, :name, presenter.q.product_category_id_in), { include_blank: nil }, { multiple: true, class: [append_sticky_class(:product_category_id_in, "filter-input"),'multiselect'] } %>
          </span>
        <% end %>

        <% if filter == :product_name %>
          <span class="preserve-alignment mobile-block">
            <%= f.label :name_in, "Product" %><br>
            <%= f.select :name_in, options_from_collection_for_select(presenter.products, :to_s, :to_s, presenter.q.name_in), { include_blank: nil }, { multiple: true, class: [append_sticky_class(:name_in, "filter-input"),'multiselect'] } %>
          </span>
        <% end %>

        <% if filter == :payment_method %>
          <span class="preserve-alignment mobile-block">
            <%= f.label :order_payment_method_in, "Payment Method" %><br>
            <%= f.select :order_payment_method_in, options_from_collection_for_select(presenter.payment_methods, :to_s, :titleize, presenter.q.order_payment_method_in), { include_blank: nil }, { multiple: true, class: [append_sticky_class(:order_payment_method_in, "filter-input"),'multiselect'] } %>
          </span>
        <% end %>
      <% end %>
      <%= link_to "Reset", admin_report_path(clear: '', sort: @query_params["sort"]), class: 'btn reset' if can_reset?(@query_params) %>
    </div>

    <% if presenter.filters.include?(:placed_at) %>
      <div class="pull-right date-filters">
        <span class="preserve-alignment">
          <label for="q_order_placed_at_date_gteq">Placed on or after</label><br>
          <%= datetime_field_tag "q[order_placed_at_date_gteq]", @presenter.start_date, class: append_sticky_class('order_placed_at_date_gteq', 'datepicker', [1.months.ago.to_date.to_s]) %>
        </span>
        <span class="preserve-alignment">
          <label for="q_order_placed_at_date_lteq">Placed on or before</label><br>
          <%= datetime_field_tag "q[order_placed_at_date_lteq]", @presenter.end_date, class: append_sticky_class('order_placed_at_date_lteq', 'datepicker', [Date.today.to_s]) %>
        </span>
        <span class="preserve-alignment">
          <br>
          <%= f.submit "Filter", class: "btn--small mobile-block screen-only" %>
        </span>
      </div>
    <% end %>
  </div>
<% end %>
