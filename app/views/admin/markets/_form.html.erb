<%= render 'shared/errors', resource: @market %>
<fieldset>
  <legend>Market Information</legend>
  <div class="row row--field">
    <div class="field column column--half column--guttered">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "column--full" %>
    </div
    ><div class="field column column--half column--guttered">
      <%= f.label :subdomain %><br>
      <%= f.text_field :subdomain, class: "column--full" %>
    </div>
  </div>

  <div class="row row--field">
    <div class="field column column--half column--guttered">
      <%= f.label :logo %><br>
      <%= f.file_field :logo %>
    </div
    ><div class="field column column--half column--guttered">
      <%= f.label :photo %><br>
      <%= f.file_field :photo %>
    </div>
  </div>

  <div class="field">
    <%= f.label :tagline %><br>
    <%= f.text_field :tagline, class: "column--full" %>
  </div>
  <div class="field">
    <%= f.label :time_zone %><br>
    <%= f.time_zone_select :timezone, ActiveSupport::TimeZone.us_zones, default: "Pacific Time (US & Canada)" %>
  </div>
  <div class="field">
    <%= f.label :contact_name %><br>
    <%= f.text_field :contact_name, class: "column--full"  %>
  </div>
  <div class="row row--field">
    <div class="field column column--half column--guttered">
      <%= f.label :contact_email %><br>
      <%= f.text_field :contact_email, class: "column--full" %>
    </div
    ><div class="field column column--half column--guttered">
      <%= f.label :contact_phone %><br>
      <%= f.text_field :contact_phone, size: 18, class: "column--full" %>
    </div>
  </div>

  <div class="field field--inline">
    <%= f.label :facebook %><br>
    <span class="btn btn--start">facebook.com/</span><%= f.text_field :facebook %>
  </div
  ><div class="field field--inline">
    <%= f.label :twitter %><br>
    <span class="btn btn--start">@</span><%= f.text_field :twitter, maxlength: 15, size: 15 %>
  </div>

  <div class="field">
    <%= f.label :profile %><br>
    <%= f.text_area :profile, rows: 4, class: "column--full" %>
  </div>
  <div class="field">
    <%= f.label :policies %><br>
    <%= f.text_area :policies, rows: 4, class: "column--full"  %>
  </div>
  <div class="row row--field">
    <div class="field column column--half column--guttered">
      <%= f.label :open_or_closed %><br>
      <input checked="checked" id="this_market_is_open" name="market_open" type="checkbox" value="1">
      <label for="product_use_simple_inventory">This market is open.</label>
    </div
    ><div class="field column column--half column--guttered">
      <%= f.label :auto_activation %><br>
      <input checked="unchecked" id="this_market_is_open" name="market_open" type="checkbox" value="0">
      <label for="product_use_simple_inventory">Auto activate organizations.</label>
    </div>
  </div>
</fieldset>
