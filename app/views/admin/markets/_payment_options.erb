<label>Allowed payment methods</label><br>
<% if @markets && @markets.size > 1 %>
  <p>Select a market to see payment options</p>
<% else %>
  <% if allow_payment_type?("allow_purchase_orders") %>
    <input type="checkbox" name="organization[allow_purchase_orders]" id="organization_allow_purchase_orders" <%= 'checked' if payment_type_enabled?("allow_purchase_orders") %>>
    <label for="organization_allow_purchase_orders">Allow purchase orders<label><br>
  <% end %>
  <% if allow_payment_type?("allow_credit_cards") %>
    <input type="checkbox" name="organization[allow_credit_cards]" id="organization_allow_credit_cards" <%= 'checked' if payment_type_enabled?("allow_credit_cards") %>>
    <label for="organization_allow_credit_cards">Allow credit cards<label><br>
  <% end %>
  <% if allow_payment_type?("allow_ach") %>
    <input type="checkbox" name="organization[allow_ach]" id="organization_allow_ach" <%= 'checked' if payment_type_enabled?("allow_ach") %>>
    <label for="organization_allow_ach">Allow ACH<label><br>
  <% end %>
<% end %>
