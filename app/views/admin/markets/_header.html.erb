<div class="tab-header stickable">
  <div class="l-constraint">

    <%= link_to "<Â Return to Markets List", admin_markets_path, class: "redundant-nav" %>

    <% if current_user.admin? %>
      <%= form_for [:admin, @market], html: { class: "pull-right" } do |f| %>
        <%= f.hidden_field :active, value: !@market.active? %>
        <%= f.submit (@market.active? ? 'Deactivate' : 'Activate'), class: "btn--small btn--activate" %>
      <% end %>
    <% end %>

    <h1><%= @market.decorate.header %></h1>
    <div class="tabs-wrapper">
      <ul class="tabs">
        <%= content_tag(:li, link_to_or_span("Market Info",   [:admin, @market]), class: 'tab') %>
        <%= content_tag(:li, link_to_or_span("Managers",      [:admin, @market, :managers]), class: 'tab') %>
        <%#= content_tag(:li, link_to_or_span("Users",         [:admin, @market, :managers]), class: 'tab todo') %>
        <%= content_tag(:li, link_to_or_span("Addresses",     [:admin, @market, :addresses]), class: 'tab') %>
        <%= content_tag(:li, link_to_or_span("Deliveries",    [:admin, @market, :delivery_schedules]), class: 'tab') %>
        <%= content_tag(:li, link_to_or_span("Payment Methods", [:admin, @market, :bank_accounts]), class: 'tab') %>
        <%= content_tag(:li, link_to_or_span("Fees",          [:admin, @market, :fees]), class: 'tab') if current_user.admin? %>
        <%= content_tag(:li, link_to_or_span("Style Chooser", [:admin, @market, :style_chooser]), class: 'tab') if @market.plan.try(:custom_branding?) %>
        <%= content_tag(:li, link_to_or_span("Cross Sell", [:admin, @market, :cross_sell]), class: 'tab') if @market.plan.try(:cross_selling?) && @market.allow_cross_sell  %>
      </ul>
    </div>
  </div>
</div>
