<%= render 'admin/markets/header' %>

<div class="row row--partial">
  <div class="column column--three-fourths">
    <legend>Add Market Address</legend>

    <%= render 'shared/errors', { resource: @address } %>

    <%= form_for [:admin, @address] do |f| %>
      <%= render 'form', {f: f} %>
      <div class="form-actions">
        <%= link_to "Cancel", admin_market_addresses_path(@market), class: "btn cancel" %>
        <%= f.submit "Add Address" %>
      </div>
    <% end %>
  </div>
</div>
