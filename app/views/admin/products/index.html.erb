<h1>Products</h1>

<%= link_to "Add a product", new_admin_product_path, class: "btn" %>

<table>
  <thead>
    <tr>
      <%= content_tag(:th, 'Seller') if current_user.multi_organization_membership? %>
      <%= content_tag(:th, 'Hub') if current_user.multi_market_membership? %>
      <th>Name</th>
      <th>Pricing</th>
      <th>In Stock</th>
      <th></th>
    </tr>
  </thead>
<% @products.each do |product| %>
  <tr class="product-row">
    <%= content_tag(:td, product.organization_name, class: 'seller') if current_user.multi_organization_membership? %>
    <%= content_tag(:td, product.market_name, class: 'market') if current_user.multi_market_membership? %>
    <td class="name"><%= link_to product.name, [:admin, product] %></td>
    <td class="pricing">
      <ul class="l-inline-list">
        <% product.prices.view_sorted.decorate.each do |price| %>
        <%= content_tag(:li, link_to(price.quick_info, '#', class: 'price-toggle')) %>
        <% end %>
      </ul>
    </td>
    <td class="stock">
      <%= product.available_inventory %>
    </td>
    <td><%= link_to "Delete", [:admin, product], method: :delete, data: { confirm: "Are you sure you want to delete this product?" } %></td>
  </tr>
<% end %>
</table>
