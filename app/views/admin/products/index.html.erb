<h1>Products</h1>

<%= link_to "Add a product", new_admin_product_path, class: "btn" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pricing</th>
      <th>In Stock</th>
    </tr>
  </thead>
<% @products.each do |product| %>
  <tr class="product-row">
    <th scope="row"><%= link_to product.name, [:admin, product] %></th>
    <td class="pricing">
      <ul class="l-inline-list">
        <% product.prices.view_sorted.decorate.each do |price| %>
        <%= content_tag(:li, link_to(price.quick_info, '#', class: 'price-toggle')) %>
        <% end %>
      </ul>
    </td>
    <td></td>
  </tr>
<% end %>
</table>
