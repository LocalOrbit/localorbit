<div class="clear-after invoice_search">
  <div class="pull-left">
    <span class="preserve-alignment">
      <input type="search" id="search" value="<%= @query_params["search"] %>" placeholder="Product Name"><button type="submit" id="search-btn" class="btn btn--end">Search</button>
    </span>
  </div>

  <div class="manager-filters">
    <% if current_user.multi_market_membership? %>
    <span class="preserve-alignment">
      <label for="filter_market">Market</label><br>
      <%= select_tag :filter_market, options_for_select(@selling_markets, selected: @query_params["market"]), prompt: "All", class: 'filter-dropdown', id: "product-filter-market", data: { parameter: "market"} %>
    </span>
    <% end %>

    <% if current_user.multi_organization_membership? %>
    <span class="preserve-alignment">
      <label for="filter_market">Organization</label><br>
      <%= select_tag :filter_organization, options_for_select(@selling_organizations, selected: @query_params["organization"]), prompt: "All", class: 'filter-dropdown', id: "product-filter-organization", data: { parameter: "organization"} %>
    </span>
    <% end %>
  </div>
  <%= link_to "Reset", admin_products_path(clear: '', sort: @query_params["sort"]), class: 'btn reset' if can_reset?(@query_params) %>
</div>
