<div class="popup popup--edit is-hidden" id="edit_inventory_<%= product.id %>">
  <h2>Edit Inventory</h2>
  <%= form_for admin_product_lots_path(product) do |f| %>
    <div class="fieldset">
      <legend>Add a lot for “<%= product.name %>”</legend>

      <div class="row">
        <div class="column column--half">
          <%= f.label :number, "Lot #" %><br>
          <%= f.text_field :number, size: 8  %>
        </div><div class="column column--half">
          <%= f.label :quantity %><br>
          <%= f.number_field :quantity, min: 0, size: 3 %>
        </div>
      </div>

      <div class="row">
        <div class="column column--half">
          <%= f.label :good_from %>
          <%= f.datetime_field :good_from, size: 8, class: 'datepicker' %><a href="#lot_good_from" class="btn btn--end calendar-toggle" title="Select a date"><i class="font-icon icon-calendar"></i></a>
        </div><div class="column column--half">
          <%= f.label :expires_at, "Expires On" %>
          <%= f.datetime_field :expires_at, size: 8, class: 'datepicker', data: {'min-date' => 0} %><a href="#lot_expires_at" class="btn btn--end calendar-toggle" title="Select a date"><i class="font-icon icon-calendar"></i></a>
        </div>
      </div>

      <div class="form-actions">
        <%= link_to "Edit Existing Lot",  admin_product_lots_path(product), class: "pull-left" %>
        <%= f.submit "Save Lot", class: "btn--small" %>
      </div>
    </fieldset>
  <% end %>
</div>
