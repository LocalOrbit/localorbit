<div class="l-page-header">
  <h1>Add Product</h1>
  <%= product_listing_disclaimer %>
  <a href="#" class="cancel">Cancel</a>
</div>

<%= render "tabs" %>
<div class="row row--partial">
  <%= form_for [:admin, @product], html: { class: "product column column--three-fourths", data: { organizations: @organizations.to_json(include: :locations), type: 'new'}} do |f| %>
    <%= render "fields", {f: f} %>

    <div class="row form-actions">
      <%= f.submit "Add Product" %>
    </div>
  <% end %>
</div>

<%= render "new_unit_modal" %>
<%= render "new_category_modal" %>
