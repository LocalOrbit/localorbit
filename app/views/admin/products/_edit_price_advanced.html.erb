<div class="popup popup--edit is-hidden" id="edit_price_<%= price.id %>">
  <button class="pull-right close"><i class="font-icon icon-close"></i></button>
  <h2>Edit Price for <%= price.product.name %></h2>

  <%= form_for [:admin, price.product, price], url: admin_product_price_path(price.product, price, format: :js, query_params: @query_params), html: { novalidate: "novalidate", data: { prefix: "price_#{price.id}" }} do |f| %>
    <%= fields_for :price, price, index: price.id do |f| %>
      <%= f.select :market_id, current_user.markets_for_select, {include_blank: 'All Markets'}, {class: "price_market_id"} %>

      <table>
        <caption>Price for all buyers</caption>
        <thead>
          <tr>
            <th><label for="<%= "price_#{price.id}_net_price" %>">Net Price</label></th>
            <th><label for="<%= "price_#{price.id}_sale_price" %>">Sale Price</label></th>
            <th><label for="<%= "price_#{price.id}_min_quantity" %>">Min Qty</label></th>
          </tr>
        </thead>
        <tr>
          <td>
            <%= f.number_field :net_price, min: 0, step: 0.01, size: 4, class: 'net-price', data: {"net-percent" => price.product.net_percent} %>
          </td>
          <td>
            <%= f.number_field :sale_price, min: 0, step: 0.01, size: 4, class: "sale-price", inputmode: "numeric" %>
          </td>
          <td>
            <%= f.number_field :min_quantity, min: 0, size: 4 %>
          </td>
        </tr>
      </table>
      <div class="popup-error">
      </div>
      <div class="form-actions pull-right">
        <%= f.submit f.object.new_record? ? "Add" : "Save Price" %>
      </div>
      <%= link_to "✚ Add New Price", [:admin, price.product, :prices] %><br>
      <%= link_to "Go to Price List", [:admin, price.product, :prices] %>

    <% end %>
  <% end %>
</div>

