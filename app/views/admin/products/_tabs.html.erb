<div class="tabs">
<ul>
  <% if @product.persisted? %>
    <%= content_tag(:li, link_to("Product Info", [:admin, @product]), class: "completed") %>
    <%= content_tag(:li, link_to("Inventory", [:admin, @product, :lots]), id: 'product-inventory-nav', class: (@product.use_simple_inventory? ? 'hidden' : nil)) %>
  <% else %>
    <li>Product Info</li>
    <%= content_tag :li, 'Inventory', id: 'product-inventory-nav', class: (@product.use_simple_inventory? ? 'hidden' : nil) %>
  <% end %>
</ul>
</div>
