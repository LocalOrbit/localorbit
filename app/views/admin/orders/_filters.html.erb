<% if current_user.admin? || current_user.market_manager? %>
  <%= search_form_for @q, url: admin_orders_path, html: { class: "order_search clear-after" } do |f| %>
    <div class="pull-left">
      <span class="preserve-alignment">
        <%= f.label :order_number_or_organization_name_or_items_seller_name_cont, "Search Orders" %><br>
        <%# NOTE: Do not change the whitespace on the following line %>
        <%= f.search_field :order_number_or_organization_name_or_items_seller_name_cont, placeholder: "Order #, Buyer, or Seller" -%><%= f.submit "Search", class: "btn--end" %>
      </span>
    </div>

    <div class="pull-right">
      <span class="preserve-alignment">
        <label for="q_placed_at_date_gteq">Filter by Date</label><br>
        <%=  datetime_field_tag "q[placed_at_date_gteq]", @search_presenter.start_date, class: 'datepicker filter-input' %><a href="#q_placed_at_date_gteq" class="btn btn--end calendar-toggle" title="Select a date"><i class="font-icon icon-calendar"></i></a>
      </span>

      <span class="preserve-alignment">
        <label for="q_placed_at_date_lteq" class="is-invisible">End Date</label><br>
        <%=  datetime_field_tag "q[placed_at_date_lteq]", @search_presenter.end_date, class: 'datepicker filter-input' %><a href="#q_placed_at_date_lteq" class="btn btn--end calendar-toggle" title="Select a date"><i class="font-icon icon-calendar"></i></a>
      </span>

      <span class="preserve-alignment">
        <br>
        <%= f.submit "Filter", class: "btn--small" %>
      </span>
    </div>

    <div class="manager-filters unjustify">
      <% if current_user.multi_market_membership? %>
      <span class="preserve-alignment">
        <%= f.label :market_id_eq, "Market" %><br>
        <%= f.collection_select :market_id_eq, @search_presenter.selling_markets, :id, :name, {include_blank: "All"}, {class: "filter-input"} %>
      </span>
      <% end %>

      <span class="preserve-alignment">
        <%= f.label :organization_id_eq, "Buyer" %><br>
        <%= f.collection_select :organization_id_eq, @search_presenter.buyer_organizations, :id, :name, {include_blank: "All"}, {class: "filter-input"} %>
      </span>
    </div>
  <% end %>
<% end %>
