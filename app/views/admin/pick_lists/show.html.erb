<div class="no-print">
  <%= link_to "<Â Back to Upcoming Deliveries", admin_delivery_tools_path, class: 'back-button' %>
  <span class="pull-right">
    <% if @very_important_person %>
      <%= link_to "#{svg_icon} Export CSV".html_safe, url_for(format: :csv), class: 'export' %>

    <% end %>
    <button class="btn btn--primary btn--small print-button" id="print-button">Print</button>
  </span>
</div>

<div class="print-page">
<%
    @pick_lists.each_with_index do |pick_list, index|
      if index == 0
        @orig = "#{pick_list.seller_ship_from_lat_long}"
        @dest = "#{current_market.addresses[0].geocode.latitude},#{current_market.addresses[0].geocode.longitude}"
        @wp = ""
      else
        @wp = @wp + (index > 0 ? "#{pick_list.seller_ship_from_lat_long}|" : "")
      end


%>

  <% if index != 0 %>
    <div class="pdf-page-break"></div>
  <% end %>

  <div class="pick-list">

    <h1>Pick List</h1>
    <div class="upcoming-delivery">

      <h2 class="heading heading-delivery-tool">Supplier Delivery</h2>
      <div class="upcoming-delivery-date"><%= @delivery.seller_display_date %> <%= @delivery.seller_time_range %></div>
      <% if @delivery.available_to_order? %>
        <p class="note">Ordering has not yet closed for this delivery</p>
      <% end %>

      <h2 class="heading heading-delivery-tool">Supplier</h2>
      <div class="vcard vcard--seller">
        <h3 class="fn org"><%= pick_list.seller_name %></h3>
        <%= pick_list.seller_ship_from_address %>

        <% if !pick_list.notes.empty? 
          # Only include this section if it, you know, *contains* anything..
        %>
        <div>
        <h3>Delivery Notes</h3>
          <% pick_list.notes.each do |note| %>
          <p><span class="buyer-name"><%= note.buyer.name %></span>: <%= note.note %></p>
          <% end %>
        </div>
        <% end %>
        
      </div>
    </div>

    <div class="table-wrapper">
      <table class="delivery-tools">
        <thead>
          <tr>
            <th>Product Code</th>
            <th>Item</th>
            <th>Total Sold</th>
            <th>Units</th>
            <th>Buyer</th>
            <th>Breakdown</th>
            <th>Initials</th>
            <th>Notes</th>
          </tr>
        </thead>

        <% pick_list.products.each do |product| %>
          <tr class="pick-list-item">
            <td class="app-code"><%= product.code %></td>
            <td class="name"><%= product.name %></td>
            <td class="total-sold"><%= product.total_sold %></td>
            <td class="units"><%= product.unit %></td>
            <td class="buyer"><%= product.first_buyer.name %></td>
            <td class="breakdown"><%= product.breakdown(product.first_buyer) %></td>
            <td class="initials"></td>
            <td class="notes"></td>
          </tr>
          <% product.remaining_buyers.each do |buyer| %>
            <tr>
              <td>-</td>
              <td></td>
              <td></td>
              <td></td>
              <td class="buyer"><%= buyer.name %></td>
              <td class="breakdown"><%= product.breakdown(buyer) %></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
<% end %>
  <% if FeatureAccess.routing_plan?(market: current_market) %>
  <h1>Routing Plan</h1>
  <div id="map-container">
    <div id="map" data-orig="<%= @orig %>" data-dest="<%= @dest %>" data-wp="<%= @wp %>" style="height:100%"></div>
  </div>
  <div id="my_textual_div"></div>

  <div style="display: none">
  <div id="path" class="pathdata"></div>
  <div id="exportGoogle"></div>
  <div id="exportDataButton"></div>
  <div id="exportData"></div>
  <div id="exportLabelButton"></div>
  <div id="exportLabelData"></div>
  <div id="exportAddrButton"></div>
  <div id="exportAddrData"></div>
  <div id="exportOrderButton"></div>
  <div id="exportOrderData"></div>
  <div id="garmin"></div>
  <div id="tomtom"></div>
  <div id="durations" class="pathdata"></div>
  <div id="durationsData"></div>
  <div id="routeDrag"></div>
  <div id="reverseRoute"></div>
  <div id="exportData_hidden" style="visibility: hidden;"></div>
  <div id="exportLabelData_hidden" style="visibility: hidden;"></div>
  <div id="exportAddrData_hidden" style="visibility: hidden;"></div>
  <div id="exportOrderData_hidden" style="visibility: hidden;"></div>
  <div id="durationsData_hidden" style="visibility: hidden;"></div>
  </div>
  <div id="dialogProgress" title="Calculating route...">
    <div id="progressBar"></div>
  </div>
  <% end %>
</div>
