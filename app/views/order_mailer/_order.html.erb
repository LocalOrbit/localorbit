<table class="lo_order">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th class="lo_currency">Unit Price</th>
      <th class="lo_currency">Subtotal</th>
    </tr>
  </thead>

  <% @order.grouped_items.each_pair do |seller, items| %>
    <tr>
      <th colspan="4" class="lo_vendor"><%= seller %></th>
    </tr>

    <% items.each do |item|%>
      <%= render "orders/order_item", {item: item} %>
    <% end %>
  <% end %>

  <tfoot>
    <tr>
      <th colspan="3">Total</th>
      <td class="lo_currency"><%= @order.gross_total %></td>
    </tr>
  </tfoot>

</table>
