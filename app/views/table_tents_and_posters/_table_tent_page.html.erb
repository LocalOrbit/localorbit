<div class="container">

    <section class="header">
      <div class="headerWrapper">
      <% if(include_product_names) %>
        <h1 class="productName"><%= product_name %></h1>
        <h4>from <span style="text-decoration:underline;">local</span> producers!</h4>
      <% else %>
        <h1 class="realFood">Real food from <span style="text-decoration:underline;">local</span> producers!</h1>
      <% end %>
      </div>
    </section>

    <section class="farm-details">
      <div class="arrow-down"></div>
      <h2 class="tt-farm-name"><%= farm.name %></h2>
      <div class="farm-location">
      <span><%= [farm.shipping_location.try(:city), farm.shipping_location.try(:state)].compact.join(", ") %></span>
      </div>
    </section>

    <section class="tt-farm-content">
      <% if farm.who_story.present? %>
        <h4>Who We Are</h4>
        <p class="who-story"><%= farm.who_story %></p>
      <% else # this is curently needed because of some last-paage-in-pdf layout funny business that causes the footer to vanish if this h4 is omitted entirely.%>
        <h4>&nbsp;</h4>
      <% end %>
      <p class="lo-logo">
        <%= image_tag pdf_asset_url("table_tents_and_posters/LO_Circle_lo.png") %>
        Powered by <strong>Local Orbit</strong>
      </p>
    </section>

  <div class="footer">
    <table class="footer-table">
    <tbody>
      <tr>
        <td class="footer-image-holder">
           <% if market.logo %>
             <%= image_tag ensure_full_url(market.logo.url) %>
          <% else %>
              &nbsp;
           <% end %>
        </td>
        <td class="market-info">
          <h5>Brought to you by</h5>
          <h4><%= market.name %></h4>
          <span><%= market.tagline %></span>
        </td>
      </tr>
    </tbody>
    </table>
  </div>

</div>
