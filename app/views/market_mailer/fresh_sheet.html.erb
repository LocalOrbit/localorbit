<h1>See what's fresh at <%= @market.name %></h1>
<p>Order by <%= @delivery.display_cutoff_time %>
   for <%= @delivery.cart_type %> <%= @delivery.buyer_display_date %> <%= @delivery.buyer_time_range %>.</p>

<% if !@note.to_s.empty? %>
<div style="border-top:1px solid #222"></div>
<p><%= @note.html_safe %></p>
<div style="border-bottom:1px solid #222"></div>
<br/>
<% end %>

<% @products_for_sale.each_category_with_products do |category, products| %>
  <% current_top_level_category = category.top_level_category %>
  <% if @previous_top_level_category != current_top_level_category %>
    <% @previous_top_level_category = current_top_level_category %>
    <h2 class="pull-left"><%= current_top_level_category.name %></h2>
    <%= link_to "Shop Now", products_url, class: "lo_button pull-right" %>
  <% end %>

  <h3 class="clear"><%= category.name %></h3>

  <table class="lo_fresh_sheet">
    <% products.each do |product| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td>
          <div>
            <% if product.image_stored? %>
                <%= image_tag product.image.thumb("150x150>").url, class: "product-image", alt: "" %>
            <% else %>
                <%= image_tag 'default-product-image.png', alt: "" %>
            <% end %>
          </div>
        </td>
        <th>
          <dl>
            <dt><%= product.name %></dt><dd> from <em><%= product.organization_name %></em></dd><br/>
          </dl><br/>
          <span class="lo_availability"><%= product.available_inventory %> Available</span><br/>
        </th>
        <td>
          <dl>
            <dt>Unit:&nbsp;<%= product.unit_singular %></dt>
          </dl>
          <%= link_to "Add to Order", product_url(product), class: "lo_add_link" %>
          <% if @preview %>
            <br>
            <%= link_to "Edit", admin_product_url(product), target: '_top', class: 'lo_button' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
