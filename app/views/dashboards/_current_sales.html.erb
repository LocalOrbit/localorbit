<table class="current-sales-table <%= cycle "odd", "even" %>">
  <thead>
    <tr>
      <th>Order #</th>
      <th>Placed On</th>
      <th>Total</th>
      <th>Delivery</th>
      <th>Payment</th>
    </tr>
  </thead>
<% current_market.orders.limit(15).order("created_at DESC").each do |order| %>
  <tr class="order-row">
    <td class="order-number"><%= order.order_number %></td>
    <td class="placed-on"><%= order.placed_at.strftime("%b %e, %Y") %></td>
    <td class="total"><%= number_to_currency(order.total_cost) %></td>
    <td class="delivery"><%= order.delivery_status.titleize if order.delivery_status.present? %></td>
    <td class="payment"><%= order.payment_status %></td>
  </tr>
<% end %>
</table>
<i>15 most recent sales</i>
