
<div class="row">
  <aside class="column column--fourth column--guttered">

    <%= render "products/selected_delivery" %>

    <% unless @sellers.empty? %>
    <h2 class="heading heading--sidebar">Sellers</h2>
    <ul class="list-naked">
      <% @sellers.each do |seller| %>
        <%= content_tag :li, link_to(seller.name, seller_path(seller)) %>
      <% end %>
    </ul>
    <% end %>

    <% if @current_seller.try(:display_twitter) %>
      <div class="widget widget--twitter">
        <a class="twitter-timeline" href="https://twitter.com/<%= @current_seller.twitter %>" data-widget-id="<%= Figaro.env.twitter_widget_id %>" data-screen-name="<%= @current_seller.twitter %>"></a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      </div>
    <% end %>

    <% if @current_seller.try(:display_facebook) %>
      <div class="widget widget--facebook">
        <div class="fb-like-box" data-href="https://www.facebook.com/localorbit" data-width="220" data-colorscheme="light" data-show-faces="false" data-header="false" data-stream="true" data-show-border="true"></div>
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=371089202914911&version=v2.0";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
      </div>
    <% end %>

  </aside
  ><div class="column column--three-fourths column--guttered vcard">
    <% if @sellers.empty? %>
      <div class="blank-state">
        <h2><%= "#{current_market.name} has no sellers at this time." %></h2>
      </div>
    <% else %>
      <div class="row">
        <div class="column column--half column--guttered">
          <h1 class="fn story-header"><%= @current_seller.name %></h1>

          <% if @current_seller.photo.present? %>
            <div class="seller-photo"><%= image_tag @current_seller.photo.remote_url, alt: "Profile photo", class: "photo" %></div>
          <% end %>

        </div
        ><div class="column column--half column--guttered">
          <h1 class="story-header adr">
            <% if @current_seller.billing_location.present? %>
              <span class="locality"><%= @current_seller.billing_location.city %></span>, <span class="region"><%= @current_seller.billing_location.state %></span>
            <% end %>
          </h1>
          <div class="seller-map"><img alt="map" src="<%= @current_seller.locations_map(330, 240) %>"></div>
        </div>
      </div>

      <div class="row">

        <div class="who-story column column--half column--guttered">
          <h2 class="story-header">Who We Are</h2>
          <%= simple_format @current_seller.who_story %>
        </div
        ><div class="how-story column column--half column--guttered">
          <h2 class="story-header">How We Do It</h2>
          <%= simple_format @current_seller.how_story %>
        </div>
      </div>

      <% if !@product_groups.empty? %>
        <h2 class="heading-section">Currently Selling</h2>
        <% @categories.each do |category| %>
          <% if @product_groups[category.id].present? %>
            <%= render "products/table", products: @product_groups[category.id], category: category %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
