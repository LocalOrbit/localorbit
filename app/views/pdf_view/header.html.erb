  <body>
    <% @logo_path = asset_url("logo.png") # needed if market doesn't have a logo %>
    <div style="position:relative;">
      <p style="position:absolute;top:22px;left:0px;font-size:10px;font-family:OpenSans,'Open Sans',Geneva,Arial,sans-serif"><%= order_number %> </p>
      <p style="position:absolute;top:22px;right:0px;font-size:10px;font-family:OpenSans,'Open Sans',Geneva,Arial,sans-serif"><%= "#{page ||= 0} of #{topage ||= 0}" %> </p>
    </div>
    <br><br><br>
    <div class="invoices-wrapper">
      <div class="row">
        <div class="column">
          <div class="row">
            <div class="column logo-column" style="width:1.1in">
              <br>
                <%=
                 if logo_stored
                   image_tag(ensure_full_url(thumb_url), alt: "#{name} logo", class: "logo", width: 100)
                 elsif @logo_path
                   image_tag(ensure_full_url(@logo_path), alt: "Local Orbit logo", class: "logo left")
                 else
                   image_tag(ensure_full_url(asset_url("logo.png")), alt: "Local Orbit logo", class: "logo left")
                 end
               %>
            </div><div class="column" style="width:2.6in">
              <div class="vcard">
                <h2>Remit To:</h2>
                <h3 class="fn org org-from"><%= name %></h3>
                <% if has_address %>
                  <div>
                    <%= street_address %><br>
                    <%= city_state_zip %><br>
                    <%= display_contact_phone %><br>
                    <%= contact_email %>
                  </div>
                <% end %>
              </div>
              <br>
              <div class="vcard vcard-buyer">
                <h2>Bill To:</h2>
                <h3 class="fn org buyer-name"><%= billing_organization_name %></h3>
                <div>
                  <%= billing_address %><br>
                  <%= billing_city %>,
                  <%= billing_state %>
                  <%= billing_zip %>
                </div>
              </div> 
            </div>
          </div>
        </div><div class="column" style="width:2.8in;display:inline-block;">
          <h1>Invoice</h1>
          <h2>Invoice Number</h2>
          <p class="invoice-num"><%= order_number %></p><br>
          <%= "<span class=\"inline-block\"><h2>Delivery Date</h2><p class=\"delivery-date\">#{delivery_date}</p></span>".html_safe if delivery_date_present %>
          <%= "<span class=\"inline-block\" style=\"margin-left:15px;\"><h2>Purchase Order #</h2><p class=\"po-num\">#{payment_note}</p></span>".html_safe if payment_note.present? %>
          <br><br>
          <div class="due-date">
            <h2>Due Date</h2>
            <%= due_date %>
          </div>
          <h2 class="inline">Invoice Date&nbsp;&nbsp;</h2>
          <span class="date">
            <%= date %>
          </span>
        </div>
      </div>
    </div>
  </body>
</html>