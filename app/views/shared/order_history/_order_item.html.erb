<% fields = %w(name quantity quantity_delivered delivery_status) %>
<% if fields.map{|field| activity.audited_changes[field].present? }.any? %>
  <p>
    <span class="activity-group"><%= activity.display_action %></span>

    <% fields.each do |field| %>
      <% if activity.audited_changes[field] %>
        <b><%= field.humanize %>:</b> <%= Array(activity.audited_changes[field]).last %>
      <% end %>
      <% if activity.audited_changes["amount"] %>
        <b>Amount:</b> <%= number_to_currency activity.auditable.amount %>
      <% end %>
    <% end %>
  </p>
<% end %>
