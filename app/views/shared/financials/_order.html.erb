<div class="order-info">
  <h1>Order Info</h1>
  <div class="order-info-primary">
    <p>Order #: <span class="special-content"><%= order.order_number %></span></p>
    <p>Buyer: <span class="special-content"><%= order.organization.name %></span></p>
    <p>Placed On: <span class="special-content"><%= order.placed_at.strftime "%m/%d/%Y" %></span></p>
    <p>Delivery Fees: <span class="special-content"><%= order.delivery_fees %></span></p>
    <p>Grand Total: <span class="special-content"><%= number_to_currency order.gross_total %></span></p>
  </div>
  <div class="order-info-secondary">
    <p>Delivery Status: <span class="special-content"><%= order.delivery_status.titleize %></span></p>
    <p>Buyer Payment: <span class="special-content"><%= order.buyer_payment_status.titleize %></span></p>
    <p>Payment Method: <span class="special-content"><%= order.payment_method.titleize %></span></p>
    <p>Payment Reference #: <span class="special-content"><%= order.payment_note %></span></p>
  </div>
</div>
<div class="order-data">
  <h2>Items for Delivery</h2>

  <table class="order-summary order-table-1">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Discount</th>
        <th>Total</th>
        <th>Delivery</th>
        <th>Buyer Payment</th>
        <th>Seller Payment</th>
      </tr>
    </thead>
    <tbody>
      <% order.items.each do |item| %>
      <tr class="order-item-row">
        <td class="name"><%= item.name %></td>
        <td class="quantity"><%= item.quantity %></td>
        <td class="price"><%= number_to_currency item.unit_price %></td>
        <td class="discount"><%= number_to_currency item.discount %></td>
        <td class="total"><%= number_to_currency item.gross_total %></td>
        <td class="delivery-status"><%= item.delivery_status.titleize %></td>
        <td class="payment-status"><%= item.buyer_payment_status.titleize %></td>
        <td class="seller-status"><%= item.seller_payment_status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <h2>Order Financial Information</h2>
  <table class="order-summary">
    <thead>
      <tr>
        <th>Gross Total</th>
        <th>Discount</th>
        <th>Transaction Fees</th>
        <th>Payment Processing</th>
        <th>Net Sale</th>
        <th>Delivery Status</th>
        <th>Payment Status</th>
      </tr>
    </thead>
    <tbody>
      <tr class="order-summary-row">
        <td class="gross-total"><%= number_to_currency order.gross_total %></td>
        <td class="discount"><%= number_to_currency order.discount %></td>
        <td class="transaction-fees"><%= number_to_currency order.transaction_fees %></td>
        <td class="payment-processing"><%= number_to_currency order.payment_fees %></td>
        <td class="net-sale"><%= number_to_currency order.net_total %></td>
        <td class="delivery-status"><%= order.delivery_status.titleize %></td>
        <td class="payment-status"><%= order.buyer_payment_status.titleize %></td>
      </tr>
    </tbody>
  </table>
</div>