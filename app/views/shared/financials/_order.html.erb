<h1>Order info</h1>

<table>
  <tbody>
    <tr>
      <td>Order #</td>
      <td><%= order.order_number %></td>
    </tr>
    <tr>
      <td>Buyer</td>
      <td><%= order.organization.name %></td>
    </tr>
    <tr>
      <td>Placed On</td>
      <td><%= order.placed_at.strftime "%m/%d/%Y" %></td>
    </tr>
    <tr>
      <td>Delivery Fees</td>
      <td><%= order.delivery_fees %></td>
    </tr>
    <tr>
      <td>Grand Total</td>
      <td><%= number_to_currency order.gross_total %></td>
    </tr>
    <tr>
      <td>Delivery Status</td>
      <td><%= order.delivery_status.titleize %></td>
    </tr>
    <tr>
      <td>Buyer Payment</td>
      <td><%= order.buyer_payment_status %></td>
    </tr>
    <tr>
      <td>Seller Payment</td>
      <td><%= order.seller_payment_status %></td>
    </tr>
    <tr>
      <td>Payment Method</td>
      <td><%= order.payment_method.titleize %></td>
    </tr>
    <tr>
      <td>Payment Ref</td>
      <td><%= order.payment_note %></td>
    </tr>
  </tbody>
</table>

<h2>Items for delivery...</h2>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Discount</th>
      <th>Total</th>
      <th>Delivery</th>
      <th>Buyer Payment</th>
      <th>Seller Payment</th>
    </tr>
  </thead>
  <tbody>
    <% order.items.each do |item| %>
    <tr class="order-item-row">
      <td class="name"><%= item.name %></td>
      <td class="quantity"><%= item.quantity %></td>
      <td class="price"><%= number_to_currency item.unit_price %></td>
      <td class="discount"><%= number_to_currency item.discount %></td>
      <td class="total"><%= number_to_currency item.gross_total %></td>
      <td class="payment-status"><%= order.buyer_payment_status %></td>
      <td class="seller-status"></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="order-summary">
  <thead>
    <tr>
      <th>Gross Total</th>
      <th>Discount</th>
      <th>Transaction Fees</th>
      <th>Payment Processing</th>
      <th>Net Sale</th>
      <th>Delivery Status</th>
      <th>Payment Status</th>
    </tr>
  </thead>
  <tbody>
    <tr class="order-summary-row">
      <td class="gross-total"><%= number_to_currency order.gross_total %></td>
      <td class="discount"><%= number_to_currency order.discount %></td>
      <td class="transaction-fees"><%= number_to_currency order.transaction_fees %></td>
      <td class="payment-processing"><%= number_to_currency order.payment_fees %></td>
      <td class="net-sale"><%= number_to_currency order.net_total %></td>
      <td class="delivery-status"><%= order.delivery_status.titleize %></td>
      <td class="payment-status"><%= order.seller_payment_status %></td>
    </tr>
  </tbody>
</table>
