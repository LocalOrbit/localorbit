<div class="row">
  <div class="photo-header" <%= "style=\"background-image: url(#{Dragonfly.app.remote_url_for(@market.photo_uid)});\"".html_safe if @market.photo.present? %>>
    <h1 class="photo-header-txt vc-wrapper">
      <span class="vertical-centerer">
        <span class="fn org"><%= @market.name %></span>
        <% if @market.first_address.present? %>
          <span class="adr"><span class="locality"><%= @market.first_address.city %></span>, <span class="region"><%=@market.first_address.state %></span></span>
        <% end %>

      </span>
    </h1>
  </div>
</div>
<div class="row three-fourths-rule">
  <div class="column column--three-fourths column--guttered">
    <div class="tab-box">
      <ul class="tabs tabs--small unguttered">
        <li class="tab">
          <a href="#market-about" class="active">About</a>
        </li>
        <li class="tab">
          <a href="#market-policies" class="inactive">Policies</a>
        </li>
      </ul>
      <div class="policies tabbed-item" id="market-policies">
        <h2 class="story-header">Policies</h2>
        <%= simple_format @market.policies %>
      </div>
      <div class="about tabbed-item" id="market-about">
        <div class="row">
         <% if @market.photo.present? %>
          <div class="column column--guttered column--two-thirds">
            <h2 class="story-header">About</h2>
            <%= simple_format @market.profile %>
          </div><div class="column column--guttered column--third">
            <%= image_tag Dragonfly.app.remote_url_for(@market.photo_uid) %>
          </div>
        <% else %>
          <h2 class="story-header">About Us</h2>
          <%= simple_format @market.profile %>
        <% end %>
        </div>

        <div class="header--column">
          <h2 class="heading story-header">Sellers</h2>
          <a href="#seller-map" class="toggle-slide seller-map-toggle" data-toggle-open="Hide Map" data-toggle-closed="Show Map">Show Map</a>
        </div>
        <div class="slide seller-map-slide is-up" id="seller-map">
          <img class="location-map slide-content" alt="" src="<%= @market.seller_locations_map 680, 400 %>" height="400">
        </div>

        <ul class="l-inline-list seller-list">
        <% @market.organizations.visible.selling.each do |seller| %>
          <%= content_tag :li, link_to(seller.name, seller_path(seller)), class: "column--fourth" %>
        <% end %>
        </ul>
      </div>
    </div>
  </div
  ><aside class="column column--fourth column-guttered market-sidebar">
    <h2 class="story-header">Contact Us</h2>
    <div class="vcard">
      <% if @market.contact_name.present? %><strong class="fn"><%= @market.contact_name %></strong><br><% end %>
      <% if @market.contact_email.present? %><%= link_to @market.contact_email, @market.contact_email, class: "email" %><br><% end %>
      <% if @market.first_address %>
      <p class="adr">
        <span class="street-address"><%= @market.first_address.address %></span><br>
        <span class="locality"><%= @market.first_address.city %></span>, <span class="region"><%=@market.first_address.state %></span> <span class="postal-code"><%= @market.first_address.zip %></span>
      </p>
      <% end %>
      <% if @market.contact_phone.present? %><span class="tel"><%= @market.contact_phone %></span><% end %>
    </div>

    <h2 class="story-header">Pickups &amp; Deliveries</h2>
    <ul class="list-naked list-zebra deliveries-list">
    <% @market.delivery_schedules.visible.order(:day).decorate.each do |delivery| %>
      <li>
        <strong class="display-date"><%= delivery.plural_weekday %></strong> â€” <%= delivery.time_window %><br>
        <span class="time-range"><%= delivery.pickup_or_dropoff %><br></span>
      </li>
    <% end %>
    </ul>
  </aside>
</div>
