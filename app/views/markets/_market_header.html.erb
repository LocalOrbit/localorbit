<div class="row">
  <div class="photo-header" <%= "style=\"background-image: url(#{Dragonfly.app.remote_url_for(@market.photo_uid)});\"".html_safe if @market.photo.present? %>>
    <h1 class="photo-header-txt vc-wrapper">
      <span class="vertical-centerer">
        <span class="fn org"><%= @market.name %></span>
        <% if @market.first_address.present? %>
          <span class="adr"><span class="locality"><%= @market.first_address.city %></span>, <span class="region"><%=@market.first_address.state %></span></span>
        <% end %>

      </span>
    </h1>
  </div>
</div>
