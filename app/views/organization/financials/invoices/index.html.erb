<%= render "organization/financials/header" %>

<div class="sub-header stickable">
  <div class="l-constraint">
    <div class="tab-title">
      <h1>Invoices</h1>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
<table>
  <thead class="stickable">
    <tr>
      <th>Order #</th>
      <th>PO #</th>
      <th>Order Date</th>
      <th>Delivery Date</th>
      <th>Amount</th>
      <th>Payment Status</th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |order| %>
    <tr class="invoice-row">
      <td class="order-number"><%= link_to order.order_number, organization_financials_invoice_path(order) %></td>
      <td class="purchase-order-number"><%= order.payment_note %></td>
      <td class="order-date"><%= order.placed_at.strftime("%m/%d/%Y") %></td>
      <td class="delivery-date"><%= order.delivery.deliver_on.strftime("%m/%d/%Y") %></td>
      <td class="amount"><%= number_to_currency(order.total_cost) %></td>
      <td><%= order.payment_status.titleize %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if @invoices.none? %>
  <div class="empty-results">
    <h2>No Results</h2>
    This table is empty, either because there is no data, or because the filter you've applied is hiding it.
  </div>
<% end %>
