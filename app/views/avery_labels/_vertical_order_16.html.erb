<div class="horizontal" style="font-size:125%">
  <div class="label-content">
    <div class="label-row">
      <div class="left-code">
        <span class="small-label">For delivery on:</span><br/>
        <span class="small-text"><%= order[:deliver_on] %></span>
      </div>
      <div class="label-heading">ORDER</div>
    </div>
    <div class="order-row">
      <span class="small-label">Order #:</span><br/>
      <span class="small-text"><%= order[:order_number] %></span>
    </div>
    <div class="order-row">
      <span class="small-label">Buyer</span><br/>
      <%= order[:buyer_name] %>
    </div>
    <div class="order-row">
      <div class="left-code-qr">
        <% if order[:market_logo_url] %>
            <%= image_tag ensure_full_url(order[:market_logo_url]) %>
        <% end %>
        &nbsp;
      </div>
      <div class="right-code-qr">
        <%= image_tag ensure_full_url(order[:qr_code_url]), :class=>"qr-code" %><br/>
      </div>
    </div>
  </div>
</div>
