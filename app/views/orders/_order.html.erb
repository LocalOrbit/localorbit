
<div class="delivery-time">
  <div class="actions pull-right">
    <%= link_to "Review Order", [:organization, :financials, @order], class: "btn btn--small btn--gray" %>
    <%= link_to "Print Order Confirmation", [:coming_soon, :dashboard], class: "btn btn--small btn--gray" %>
  </div>

  <h2 class="order-heading">Items for <%=  @order.delivery.decorate.checkout_type %>:</h2>
  <p class="order-subheading checkout-date"><%= raw @order.delivery.decorate.checkout_date %></p>
</div>

<div class="location vcard">
  <h2 class="order-heading">Your order <%= @order.display_delivery_or_pickup %></h2>
  <!-- <h3 class="fn order-subheading">Delivery Location Name</h3> -->
  <p class="adr">
    <%#= link_to @product.organization.name, seller_path(@product.organization) %><br>
    <span class="street-address"><%= @order.delivery_address %></span><br>
    <span class="locality"><%= @order.delivery_city %></span>, <span class="region"><%= @order.delivery_state %></span> <span class="postal-code"><%= @order.delivery_zip %></span>
  <% if @order.delivery_phone.present? %>
    <br><span class="tel">T: <%= link_to @order.delivery_phone, "tel:#{@order.delivery_phone}", class: "value" %></span>
  <% end %>
  </p>
</div>

<table class="order-summary">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th></th>
      <th class="math">Item Total</th>
    </tr>
  </thead>
  <tbody>
    <% @order.items.each do |item| %>
    <tr class="order-item-row">
      <td class="name"><%= item.name %></td>
      <td class="quantity"><%= item.decorate.quantity_with_unit %></td>
      <td class="price"><%= number_to_currency item.unit_price %></td>
      <td>Â </td>
      <td class="item-total math"><%= number_to_currency item.gross_total %></td>
    </tr>
    <% end %>
  </tbody>

  <tfoot class="math">
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <th scope="row">Order Total</th>
      <td class="total"><%= number_to_currency @order.total_cost %></td>
    </tr>

    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td>Payment method</td>
      <td class="payment-status"><%= @order.payment_method.titleize %></td>
    </tr>

    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td>Payment status</td>
      <td class="payment-status"><%= @order.payment_status.titleize %></td>
    </tr>

    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td>Delivery status</td>
      <td class="delivery-status"><%= @order.delivery_status.titleize %></td>
    </tr>
  </tfoot>

</table>
