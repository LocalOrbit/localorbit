
<div class="row row--partial">
  <%= form_tag [:sessions, :organizations], method: :post, class: "column column--seven-twelfths organization-form" do |f| %>
    <%= hidden_field_tag :redirect_back_to, params[:redirect_back_to] %>

    <h1>Select an Organization</h1>
    <div class="info-note">You manage multiple organizations. For which organization would you like to place an order?</div>

    <div class="field">
      <%= label_tag :org_id, "Organization" %><br>
      <%= select_tag(:org_id, options_from_collection_for_select(@organizations, 'id', 'name'), class: "column column--full") %>
    </div>
    <div class="form-actions">
      <%= submit_tag "Select Organization", class: "mobile-block" %>
    </div>
  <% end %>
</div>
